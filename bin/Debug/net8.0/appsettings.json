{
  // Configuration settings for logging in the application.
  "Logging": {
    // Specifies the logging levels for different components.
    "LogLevel": {
      // Sets the default logging level to "Information".
      // This means informational messages and above (e.g., warnings, errors) will be logged.
      "Default": "Information",

      // Configures the logging level specifically for ASP.NET Core components.
      // "Warning" means only warnings and above (e.g., errors) will be logged for these components.
      "Microsoft.AspNetCore": "Warning"
    }
  },

  // Specifies which hosts are allowed to access the application.
  // "*" means any host is allowed to access this application.
  "AllowedHosts": "*",

  // Connection strings to configure database connections.
  "ConnectionStrings": {
    // Connection string for the database named "MovieContextDb".
    
    // - `Database=MovieContextDb`: Specifies the database name.
    // - `Trusted_Connection=True`: Uses Windows authentication for the database connection.
    // - `TrustServerCertificate=True`: Trusts the server's SSL/TLS certificate, even if it is self-signed.
    "MovieContexApi": "Server=db; Database=MovieContextDb;User=sa;Password=123456; Trusted_Connection=True; TrustServerCertificate=True"
  }

  //  "ConnectionStrings": {
  //  "MovieContexApi": "Server=db;Database=MovieContextDb;User=sa;Password=YourStrongPassword;"
  //}        

